{
  "manifest_version": 3,
  "name": "WriteWise",
  "version": "0.1.0",
  "description": "Refine your writing using AI (GPT/Gemini) with privacy-first local storage.",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open WriteWise popup"
    }
  }
}
